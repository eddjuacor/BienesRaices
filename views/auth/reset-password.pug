extends ../layout/index
block contenido
  
    div.py-6 
        h1.text-4xl.my-8.font-extrabold.text-center Bienes
            sapn.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina 

        if errores
            div(class="max-w-md mx-auto my-10") 
                each error in errores 
                    p.bg-indigo-600.text-white.uppercase.text-xs.text-center.p-1.mb-2.font-bold= error.msg
      
      
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" noValidate) 
                    input(type="hidden" name="_csrf" value= csrfToken)
                    
                    div 
                        label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="password") Nuevo Password
                        input#password.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nuevo Password" type="password" name="password")
                    

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type='submit' value='Guardar Password')    